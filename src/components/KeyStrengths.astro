---
const strengths = {
  tech: [
    'React', 'Typescript', 'React Native', 'Git', 'Electron',
    'TanStack Query', 'Redux', 'Web3', 'GitHub Actions', 'Monorepos'
  ],
  work: [
    'Performance profiling & optimization',
    'Pixel-perfect design implementation',
    'Project ownership',
    'Execution precision',
    'Strong understanding of DeFi UX'
  ],
  human: [
    'Clear communicator',
    'Curious',
    'Organized',
    'Eye for details',
    'Good mood transmitter'
  ]
}
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
  <div class="flex flex-col gap-4">
    <h3 class="text-xl font-bold text-gray-900 dark:text-white">Tech</h3>
    <ul class="flex flex-wrap gap-2">
      {strengths.tech.map((item) => (
        <li class="bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 px-3 py-1 rounded-full text-sm font-medium">
          {item}
        </li>
      ))}
    </ul>
  </div>

  <div class="flex flex-col gap-4">
    <h3 class="text-xl font-bold text-gray-900 dark:text-white">Work</h3>
    <ul class="flex flex-col gap-2">
      {strengths.work.map((item) => (
        <li class="text-gray-600 dark:text-gray-300 flex items-start">
          <span class="mr-2 text-sky-500">•</span>
          {item}
        </li>
      ))}
    </ul>
  </div>

  <div class="flex flex-col gap-4">
    <h3 class="text-xl font-bold text-gray-900 dark:text-white">Human</h3>
    <ul class="flex flex-col gap-2">
      {strengths.human.map((item) => (
        <li class="text-gray-600 dark:text-gray-300 flex items-start">
          <span class="mr-2 text-sky-500">•</span>
          {item}
        </li>
      ))}
    </ul>
  </div>
</div>
